<idea-plugin>
    <id>io.github.asmflow.assembly</id>

    <name>Assembly</name>
    <vendor>HKUST AsmFlow</vendor>
    <description>Various Assembly language support for the IntelliJ Platform. Part of the AsmFlow project.</description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.AssemblyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="ARMv7_ASM" implementationClass="io.github.asmflow.assembly.armv7.annotation.ARMv7MnemonicAnnotator"/>
        <colorSettingsPage implementation="io.github.asmflow.assembly.armv7.options.ARMv7ColorSettingsPage"/>
        <configurationType
                implementation="io.github.asmflow.assembly.execution.configurations.AssemblyRunConfigurationType"/>
        <fileType name="ARMv7 Assembly"
                  language="ARMv7_ASM"
                  implementationClass="io.github.asmflow.assembly.armv7.ARMv7FileType"
                  extensions="arm"
                  fieldName="INSTANCE"/>
        <lang.parserDefinition language="ARMv7_ASM"
                               implementationClass="io.github.asmflow.assembly.armv7.ARMv7ParserDefinition"/>
        <lang.syntaxHighlighterFactory language="ARMv7_ASM"
                                       implementationClass="io.github.asmflow.assembly.armv7.editor.colors.ARMv7SyntaxHighlighterFactory"/>
    </extensions>
</idea-plugin>
