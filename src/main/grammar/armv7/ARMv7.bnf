        ASCIZ = "asciz"
        BALIGN = "balign"
        BALIGNL = "balignl"
        BALIGNW = "balignw"
        BYTE = "byte"
        COMM = "comm"
        DATA = "data"
        DEF = "def"
        DESC = "desc"
        DIM = "dim"
        DOUBLE = "double"
        EJECT = "eject"
        ELSE = "else"
        ENDEF = "endef"
        ENDIF = "endif"
        EQU = "equ"
        EQUIV = "equiv"
        ERR = "err"
