    mixin(".+Instruction") = "io.github.asmflow.assembly.armv7.psi.impl.ARMv7InstructionSuffixImpl"
    implements(".+Instruction") = "io.github.asmflow.assembly.armv7.psi.IARMv7InstructionSuffix"
